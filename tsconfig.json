{
  "compilerOptions": {
    "target": "ES6",  // Compile to ES6 for modern JavaScript features
    "module": "CommonJS",  // Use CommonJS module system
    "outDir": "./dist",  // Output directory for compiled JavaScript
    "rootDir": "./src",  // Root directory for source TypeScript files
    "esModuleInterop": true,  // Enable default import syntax with non-ESM modules
    "skipLibCheck": true,  // Skip library checks for faster builds
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing of filenames
    "strict": true,  // Enable all strict type-checking options
    "moduleResolution": "node",  // Use Node.js module resolution strategy
    "resolveJsonModule": true,  // Allow importing JSON modules
    "allowJs": true,  // Allow JavaScript files to be included
    "noImplicitAny": true  // Ensure that variables are explicitly typed
  },
  "include": [
    "src/**/*"  // Include all TypeScript files in the 'src' directory
  ],
  "exclude": [
    "node_modules",  // Exclude 'node_modules' folder
    "dist",  // Exclude the output directory 'dist'
    "tests"  // Exclude the 'tests' folder if you don't want to compile test files
  ]
}
